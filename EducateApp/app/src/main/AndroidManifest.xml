<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="space.karsukova.educateapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ViewGroupAdminActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".CreateGroup" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".FindGroupActivity" />
        <activity android:name=".EditProfileActivity" android:theme="@style/AppTheme.NoActionBar.Material"/>
        <activity android:name=".ProfileActivity" android:theme="@style/AppTheme.NoActionBar.Material"/>
        <activity android:name=".UploadDocument" android:theme="@style/AppTheme.NoActionBar.Material"/>
        <activity android:name=".UploadImage" android:theme="@style/AppTheme.NoActionBar.Material"/>
        <activity android:name=".UploadNotice" android:theme="@style/AppTheme.NoActionBar.Material" />
        <activity android:name=".AdminActivity" android:theme="@style/AppTheme.NoActionBar.Material" />
        <activity android:name=".VerifyPhone" />
        <activity android:name=".ResetPassword" />
        <activity android:name=".MainActivity" />
        <activity android:name=".FindGroupActivityUser" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewGroupInfo"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>